<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealplannerfx.coloredScreen.ScreenColoredZZNewIngredientMaskController">
    <HBox alignment="TOP_CENTER" maxHeight="-Infinity" prefWidth="600.0">
        <padding>
            <Insets bottom="5.0" />
        </padding>
        <Label fx:id="idNumberText" alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="20.0" text="0.">
           <HBox.margin>
               <Insets right="5.0" />
           </HBox.margin>
        </Label>
      <VBox prefWidth="218.0">
         <children>
            <TextField fx:id="ingredientText" prefHeight="46.0" prefWidth="222.0" promptText="(Ingredient)" />
            <ListView fx:id="ingredientListText" fixedCellSize="25.0" prefHeight="0.0" prefWidth="230.0" />
         </children>
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </VBox>
        <TextField fx:id="quantityBoxTextIngredient" prefHeight="46.0" prefWidth="69.0" promptText="15">
            <font>
                <Font size="19.0" />
            </font>
            <HBox.margin>
                <Insets right="5.0" />
            </HBox.margin>
        </TextField>
        <ComboBox fx:id="unitComboBox" prefHeight="46.0" prefWidth="150.0" promptText="unit">
           <HBox.margin>
               <Insets right="5.0" />
           </HBox.margin>
        </ComboBox>
        <Button mnemonicParsing="false" onAction="#deleteIngredient" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #FF6961;" text="x">
            <HBox.margin>
                <Insets right="5.0" />
            </HBox.margin>
            <font>
                <Font size="22.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#addIngredient" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #77dd77;" text="+">
            <font>
                <Font size="22.0" />
            </font>
        </Button>
    </HBox>

</AnchorPane>
