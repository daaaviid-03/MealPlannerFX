<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="50.0" prefWidth="455.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealplannerfx.ScreenColoredZZNewIngredientMaskController">
    <HBox fx:id="IngredientDiv" alignment="TOP_CENTER" maxHeight="-Infinity" prefHeight="50.0" prefWidth="455.0">
        <children>
         <Label fx:id="idNumberText" alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="20.0" text="0.">
            <HBox.margin>
               <Insets right="5.0" />
            </HBox.margin>
         </Label>
            <ComboBox fx:id="ComboBoxIngredient" prefHeight="46.0" prefWidth="214.0" promptText="(Ingredient)">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </ComboBox>
            <TextField fx:id="QuantityBoxTextIngredient" prefHeight="46.0" prefWidth="78.0" promptText="15">
                <font>
                    <Font size="19.0" />
                </font>
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </TextField>
            <Label text="g">
                <font>
                    <Font size="30.0" />
                </font>
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            </Label>
            <Button fx:id="deleteIngredientButton" mnemonicParsing="false" onAction="#deleteIngredient" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #FF6961;" text="x">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
                <font>
                    <Font size="22.0" />
                </font>
            </Button>
            <Button fx:id="addIngredientButton" mnemonicParsing="false" onAction="#addIngredient" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #77dd77;" text="+">
                <font>
                    <Font size="22.0" />
                </font>
            </Button>
        </children>
        <padding>
            <Insets bottom="5.0" />
        </padding>
    </HBox>

</AnchorPane>
