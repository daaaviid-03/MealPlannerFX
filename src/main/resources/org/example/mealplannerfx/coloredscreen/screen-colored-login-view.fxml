<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealplannerfx.coloredscreen.ScreenColoredLoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="loginText" text="Login" textAlignment="CENTER">
      <font>
         <Font size="75.0" />
      </font>
   </Label>
   <Label alignment="TOP_CENTER" contentDisplay="RIGHT" prefHeight="46.0" prefWidth="574.0" text="Start planning all your meals in one place." textAlignment="CENTER" textFill="#00000091">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" prefHeight="67.0" prefWidth="1880.0">
      <children>
         <Label text="Nickname:    ">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
         <TextField id="nicknameTextField" fx:id="nicknameText" prefHeight="65.0" prefWidth="413.0" promptText="nickname">
            <font>
               <Font size="30.0" />
            </font>
         </TextField>
      </children>
   </FlowPane>
   <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" layoutX="30.0" layoutY="582.0" prefHeight="66.0" prefWidth="1880.0">
      <children>
         <Label text="Password:    ">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
         <PasswordField fx:id="passwordText" prefHeight="66.0" prefWidth="408.0" promptText="*****">
            <font>
               <Font size="30.0" />
            </font>
         </PasswordField>
      </children>
   </FlowPane>
   <Label fx:id="errorText" alignment="TOP_CENTER" contentDisplay="RIGHT" prefHeight="8.0" textAlignment="CENTER" textFill="#ff0000c6">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <Button fx:id="LoginButton" mnemonicParsing="false" onAction="#onLoginButtonClicked" prefHeight="72.0" prefWidth="575.0" style="-fx-background-color: #BDECB6;" text="Login" textAlignment="CENTER">
      <font>
         <Font size="33.0" />
      </font>
   </Button>
   <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" prefHeight="65.0" prefWidth="1748.0">
      <children>
         <Label text="New to MealPlanner?    ">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Button mnemonicParsing="false" onAction="#onRegisterButtonClicked" style="-fx-background-color: #ffb347;" text="Register">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
      </children>
   </FlowPane>
</VBox>
